#!/usr/bin/env groovy

pipeline {
    agent any

    tools {
        maven "maven3"
    }

    stages {
        stage('Init') {
            steps {
                configFileProvider([configFile(fileId: '75d7a907-05a7-49c4-8ca4-ecfc124b4afb', targetLocation: 'settings.xml')]) {
                    sh 'mkdir -p ~/.m2 && cp $WORKSPACE/settings.xml -f ~/.m2/settings.xml'
                }
            }
        }

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                sh 'mvn -Pexecutable-jar -DskipTests=true clean package'
                archiveArtifacts artifacts: '**/target/*.jar', fingerprint: true
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }

            post {
                always {
                    junit 'target/surefire-reports/**/*.xml'
                }
            }
        }

        stage('Deploy') {
            steps {
                sh 'mvn deploy -Pexecutable-jar -DskipTests=true -DaltDeploymentRepository=archiva.snapshots::default::${ARTIFACTORY_URI}'
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}